@model DiscountCalculatorModel

@{
    ViewBag.Title = "Home";
}

@* jumbotron with greenish background white h1 text that is centered *@
<div class="jumbotron bg-success">
    @* OVERRIDES H1's default size by applying "custom-heading" class and overriding font-size in custom.css *@
    <h1 class="text-white text-center custom-heading"><span class="fas fa-money-bill-alt"></span>&nbsp;Price Quotation</h1>
</div>

@* use row class that is grid system in bootstrap to make the form vertical for mobile screens *@
<form asp-action="Index" method="post">
    @* use 4 cols each for label, input, and error message, so they are stacked in mobile *@
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" asp-for="Subtotal">Subtotal:</label>
        <div class="col-sm-4">
            <input class="form-control" asp-for="Subtotal" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Subtotal" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" asp-for="DiscountPercent">Discount Percent:</label>
        <div class="col-sm-4">
            <input class="form-control" asp-for="DiscountPercent" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>
    </div>
    @* set the value for discount amount and total *@
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Discount Amount:</label>
        <div class="col-sm-8">
            <span>@ViewBag.DiscountAmount.ToString("C2")</span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Total:</label>
        <div class="col-sm-8">
            <span>@ViewBag.Total.ToString("C2")</span>
        </div>
    </div>
    @* post request to the controller *@
    <div class="form-group row">
        @* use all cols of the row for both buttons *@
        <div class="col-sm-12">
            <button class="btn btn-success m-1" type="submit">Calculate</button>
            @* clear the form by redirecting to the index action *@
            <a class="btn btn-success m-1" asp-action="Index">Clear</a>
        </div>
    </div>
</form>